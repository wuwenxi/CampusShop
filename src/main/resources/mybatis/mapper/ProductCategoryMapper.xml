<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wwx.ssm.o2o.dao.ProductCategoryMapper">

    <select id="queryProductCategoryList" resultType="com.wwx.ssm.o2o.entity.ProductCategory">
         select product_category_id,product_category_name,priority,create_time
         from tb_product_category
         where shop_id = #{shopId}
         order by
         priority desc
    </select>

    <insert id="insertProductCategory" useGeneratedKeys="true" keyColumn="product_category_id" keyProperty="productCategoryId">
        insert into
        tb_product_category(product_category_id,
        product_category_name,priority,create_time,shop_id)
        values (#{productCategoryId},#{productCategoryName},#{priority},#{createTime},#{shopId})
    </insert>

</mapper>